  <!-- Header -->
  <header class="masthead bg-primary text-white text-center">
    <div class="container">
      <img class="img-fluid mb-5 d-block mx-auto" src="img/tooltracker.png" alt="">
      <h1 class="text-uppercase mb-0">Get Started</h1>
      <hr class="star-light">
      <h2 class="font-weight-light mb-0">Providing the tools you need, to succeed</h2>
    </div>
  </header>
  <!-- LOGIN SECTION -->
  <section id="contact">
    <div class="container">
      <h2 class="text-center text-uppercase text-secondary mb-0">Enter Your Information</h2>
      <hr class="star-dark mb-5">
      <div class="row">
        <div class="col-lg-8 mx-auto">


          <div class="form-group row">
            <label for="userName" class="col-2 col-form-label">User Name</label>
            <div class="col-10">
              <input class="form-control" type="text" id="userName">
            </div>
          </div>
          <div class="form-group row">
            <label for="price" class="col-2 col-form-label">Price</label>
            <div class="col-10">
              <input class="form-control" type="search" id="price">
            </div>
          </div>
          <div class="form-group row">
            <label for="tool">Select Tool:</label>
            <select class="form-control" id="tool">
              <option>Wrench</option>
              <option>Drill</option>
              <option>Hammer</option>
              <option>Saw</option>
            </select>
          </div>
          <div class="form-group row">
            <label for="example-url-input" class="col-2 col-form-label">Quantity</label>
            <div class="col-10">
              <input class="form-control" type="url" id="qty">
            </div>

          </div>
        </div>
      </div>
      <br>
      <div id="success"></div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary btn-xl" id="sendMessageButton">Send</button>
      </div>
      </form>
        <ul id="example-list" class="list-group">
          {{#each tools}}
          <li data-id="{{this.id}}" class="list-group-item">
            <a href="api/tools/{{this.id}}">{{this.userName}}</a>
            <hr>
            <p>Tool: {{this.tool}}</p>
            <p>Price: {{this.price}}</p>
            <p>Quantity: {{this.qty}}</p>
            <button class="btn btn-danger float-right delete">ï½˜</button>
          </li>
          {{/each}}
        </ul>
    </div>
    </div>
    </div>
